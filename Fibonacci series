```java
import java.util.Scanner;

public class FibonacciSerisi {
    public static void main(String[] args) {
        // KullanÄ±cÄ±dan giriÅŸ al
        Scanner scanner = new Scanner(System.in);
        System.out.print("KaÃ§ elemanlÄ± Fibonacci serisi istiyorsunuz? ");
        
        // KullanÄ±cÄ±nÄ±n girdiÄŸi deÄŸeri al
        int n = scanner.nextInt();
        scanner.close(); // Scanner'Ä± kapat (Bellek optimizasyonu iÃ§in Ã¶nemli!)

        // HatalÄ± giriÅŸ kontrolÃ¼
        if (n <= 0) {
            System.out.println("âš ï¸ LÃ¼tfen 1 veya daha bÃ¼yÃ¼k bir sayÄ± girin!");
        } else {
            // Fibonacci serisini hesapla ve ekrana yazdÄ±r
            fibonacci(n);
        }
    }

    public static void fibonacci(int n) {
        int ilkSayi = 0, ikinciSayi = 1;

        System.out.print("ğŸ“Œ Fibonacci Serisi: ");

        // EÄŸer kullanÄ±cÄ± 1 girerse sadece 0 yazdÄ±r
        if (n == 1) {
            System.out.println(ilkSayi);
            return;
        }

        // EÄŸer 2 eleman girilirse 0 ve 1 yazdÄ±r
System.out.print(ilkSayi + ", " + ikinciSayi);

        // Fibonacci serisini hesapla
        for (int i = 2; i < n; i++) {
            int sonrakiSayi = ilkSayi + ikinciSayi;
            System.out.print(", " + sonrakiSayi);

            // DeÄŸerleri gÃ¼ncelle
            ilkSayi = ikinciSayi;
            ikinciSayi = sonrakiSayi;
        }
        System.out.println(); // Yeni satÄ±ra geÃ§
    }
}
